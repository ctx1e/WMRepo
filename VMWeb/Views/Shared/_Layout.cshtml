<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VMWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    @RenderSection("Styles", required: false)


</head>
<body>

    <div class="container-fluid">
        <div class="row">

            <div class="col-md-2 bg-dark text-white" id="sidebar">
                <h2>Menu</h2>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Index" class="nav-link text-white @ViewData["ActiveLink"]">
                            <i class="bi bi-house-fill"></i> Home
                        </a>
                    </li>

                    <li class="nav-item">
                        <a asp-controller="Product" asp-action="ProductView" class="nav-link text-white @ViewData["ActiveLink"]">
                            <i class="bi bi-stack"></i> Products
                        </a>
                    </li>

                    <li class="nav-item">
                        <a asp-controller="WarehouseIn" asp-action="WarehouseInView" class="nav-link text-white @ViewData["ActiveLink"]">
                            <i class="bi bi-house-add-fill"></i> Warehouse In
                        </a>
                    </li>

                    <li class="nav-item">
                        <a asp-controller="Product" asp-action="ProductView" class="nav-link text-white @ViewData["ActiveLink"]">
                            <i class="bi bi-house-dash-fill"></i> Warehouse Out
                        </a>
                    </li>

                    <li class="nav-item">
                        <a asp-controller="Inventory" asp-action="InventoryView" class="nav-link text-white @ViewData["ActiveLink"]">
                            <i class="bi bi-clipboard-data-fill"></i> Inventory
                        </a>
                    </li>
                </ul>
            </div>

            <div class="col-md-10" style="background-color:#d6d6d6">
                <header>
                    <nav class="navbar navbar-expand-sm navbar-light text-center" style="display: flex;background-color:#e8e8e8; justify-content:center; align-items:center">
                        <div> 
        
                            <h2 style="color: white; font-size:1.5rem; background: rgba(0, 0, 0, 0.5); padding: 5px 10px; border-radius:10px">Warehouse Management</h2>
                         </div>

                        @* <div style="display:flex; justify-content:end; align-items:center"> *@
                        @*     <a asp-controller="User" asp-action="Logout"><button type="button" class="btn btn-outline-secondary mx-4">Logout</button></a> *@
                        @* </div> *@

                    </nav>
                </header>

                <div id="content">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
            </div>




        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
